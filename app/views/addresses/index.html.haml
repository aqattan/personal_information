%p#notice= notice
%h1
  %span.badge-pill.badge-primary Addresses
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Street
      %th City
      %th{:colspan => "2"}
  %tbody
    - @addresses.each do |address|
      %tr
        %td
          = address.person.name
        %td
          = address.street
        %td
          = address.city
        %td
          = link_to 'Show', address, class:"btn btn-success"
        %td
          = link_to 'Edit', edit_address_path(address), class: "btn btn-warning"
%br/
= link_to 'New Address', new_address_path
